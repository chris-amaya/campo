{{> head}}
<body>
    {{> modals}}
    <div class="container">
        {{> header2}}

        <div class="welcome" id="welcome">
            <h3>Some Title Goes Here</h3>
            <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Ea tempore assumenda incidunt quaerat dolor temporibus.</p>
        </div>

        <div class="login-container" id="loginContainer">
            <div >
                <div class="form-active">
                    <a href="/login" class="active">LOGIN</a>
                    <a href="/registro">REGISTRO</a>
                </div>
                <form class="container login" >
                    <div class="email">
                        <input type="email" placeholder="example@gmail.com">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="password">
                        <input type="password" placeholder="*******">
                        <i class="fas fa-lock"></i>
                    </div>

                    <div class="conditions">
                        <label><input type="checkbox"><span><p>Recordar</p></span></label>
                        <a class="lost-password">Perdí mi contraseña</a>
                    </div>

                    <input type="submit" value="Login" class="login-button">
                </form>

                <form class="container register">
                    <div class="name">
                        <input type="text" placeholder="Nombre">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="last-name">
                        <input type="text" placeholder="Apellidos">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="email">
                        <input type="text" placeholder="Correo Electrónico">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="password">
                        <input type="password" placeholder="Contraseña">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="password">
                        <input type="password" placeholder="Repetir Contraseña">
                        <i class="fas fa-lock"></i>
                    </div>

                    <div class="conditions">
                        <label><input type="checkbox"><span><p>Acepto derechos y condiciones</p></span></label>
                        <label><input type="checkbox"><span><p>Acepto privacidad</p></span></label>
                    </div>

                    <input type="submit" value="Registrarse" class="login-button">
                </form>
                <hr>
                <div class="login-altern">
                    <div class="facebook">
                        <i class="fab fa-facebook-f"></i>
                    </div>

                    <div class="google">
                        <i class="fab fa-google"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>